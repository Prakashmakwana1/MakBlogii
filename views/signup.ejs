<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Signup | Blogify</title>

    <style>
      /* Background Styling */
      body {
        background-image: url("/images/background.jpg");
        /* background-color: rgb(252, 253, 253); */
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      /* Navbar - Fix to Top */
      .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #212529; /* Dark Navbar */
        padding: 10px 20px;
        z-index: 1000; /* Keep it above other elements */
      }

      /* Form Container */
      .signup-container {
        margin-top: 185px;
        background: rgba(235, 235, 233, 0.568);
        backdrop-filter: blur(0.1px);
        border-radius: 12px;
        padding: 10px;
        max-width: 500px;
        width: 100%;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        text-align: center;
        color: rgb(79, 12, 61);
        animation: fadeIn 0.5s ease-in-out;
      }

      /* Heading Styling */
      .signin {
        font-size: 2rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #763131;
      }

      .signin::after {
        content: "";
        display: block;
        width: 60px;
        height: 2px;
        background-color: rgb(29, 19, 19);
        margin: 8px auto 0;
        border-radius: 2px;
      }

      /* Button Styling */
      .btn-primary {
        background-color: #512346;
        border: none;
        font-size: 1.2rem;
        padding: 10px;
        border-radius: 6px;
        transition: 0.3s;
      }

      .btn-primary:hover {
        background-color: #280c37;
      }

      /* Input Styling */
      .form-control,
      .form-select {
        background: rgb(254, 254, 254);
        border: none;
        color: rgb(120, 144, 171);
      }

      .form-control::placeholder {
        color: rgba(166, 95, 95, 0.7);
      }

      /* Fade-in Animation */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>

  <body>
    <nav class="navbar"><%- include('./partials/nav') %></nav>

    <div class="signup-container">
      <h5 class="signin">Create Your Account</h5>

      <!-- Error Messages -->
      <% if (typeof alert != 'undefined') { %> <% alert.forEach(function(error)
      { %>
      <div class="alert alert-danger" role="alert"><%= error.msg %></div>
      <% }) %> <% } %>

      <!-- Signup Form -->
      <form action="/user/signup" method="post">
        <div class="mb-3">
          <label for="fullName" class="form-label"><b>Full Name</b></label>
          <input
            type="text"
            class="form-control"
            id="fullName"
            name="fullName"
            placeholder="Enter your full name"
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label"><b>Email Address</b></label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="email"
            placeholder="Enter your email"
          />
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label"><b>Password</b></label>
          <input
            name="password"
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            placeholder="Enter a strong password"
          />
        </div>

        <div class="mb-3">
          <label for="mobilenumber" class="form-label"><b>Mobile Number</b></label>
          <input
            type="number"
            class="form-control"
            id="mobilenumber"
            name="mobilenumber"
            placeholder="Enter your mobile number"
          />
        </div>

        <div class="mb-3">
          <label for="inputAddress" class="form-label"><b>Address</b></label>
          <input
            type="text"
            class="form-control"
            id="inputAddress"
            name="inputAddress"
            placeholder="Enter your address"
          />
        </div>

        <div class="mb-3 mt-3">
          <label><b>Gender:</b></label><br />
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            value="Male"
          />
          Male
          <input
            class="form-check-input"
            type="radio"
            name="gender"
            value="Female"
          />
          Female
        </div>

        <div class="mb-3">
          <label for="city"><b>City:</b></label>
          <select class="form-select mt-1" name="city">
            <option value="">Select City</option>
            <option value="Ahmedabad">Ahmedabad</option>
            <option value="Vadodara">Vadodara</option>
            <option value="Rajkot">Rajkot</option>
            <option value="Surat">Surat</option>
            <option value="Jamnagar">Jamnagar</option>
          </select>
        </div>

        <div class="mb-3">
          <label><b>Hobbies</b></label><br />
          <input
            class="form-check-input"
            type="checkbox"
            name="hobbies"
            value="Sports"
          />
          Sports
          <input
            class="form-check-input"
            type="checkbox"
            name="hobbies"
            value="Singing"
          />
          Singing
          <input
            class="form-check-input"
            type="checkbox"
            name="hobbies"
            value="Writing"
          />
          Writing
        </div>

        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
      </form>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
